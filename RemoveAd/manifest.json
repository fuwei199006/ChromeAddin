{
	"manifest_version": 2,
	"name": "去除广告",
	"version": "0.0.1",
	"background": { "scripts": ["jquery-2.0.0.min.js", "background.js"] },
	"page_action": {
		"default_icon": {
			"19": "r19.png",
			"38": "r38.png"
		},
		"default_title": "去除广告", // shown in tooltip
		"default_popup": "popup.html"
	},
	"permissions" : ["tabs","http://localhost/"],
	"content_scripts":[{
		"matches":["http://*/*"],
		"js":["jquery-2.0.0.min.js", "content_script.js"]
	}]
}
